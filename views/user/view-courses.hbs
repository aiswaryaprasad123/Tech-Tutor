<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Courses</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .top-bar {
            background-color: #1100ff;
            color: #fff;
            padding: 1px 0;
            text-align: center;
            font-size: 20px;
        }

        .courses-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
        }

        .course-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 14px rgb(0, 4, 255);
            overflow: hidden;
            margin-bottom: 20px;
            width: calc(33.33% - 20px);
            max-width: 300px;
            cursor: pointer;
            transition: transform 0.3s ease;
            border: 2px solid #ccc;
        }

        .course-card:hover {
            transform: translateY(-5px);
        }

        .course-card h2 {
            font-size: 20px;
            margin: 15px 20px 5px;
        }

        .course-card p {
            font-size: 16px;
            margin: 5px 20px 15px;
        }

        .course-card {
            background-size: cover;
            background-position: center;
            min-height: 200px;
        }

        @media (max-width: 960px) {
            .courses-container {
                flex-direction: column;
                align-items: center;
            }
        }

        .buy-now-btn {
            display: block;
            margin: 0 auto;
            background-color: #1100ff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .buy-now-btn:hover {
            background-color: #0d00cc;
        }


        /* Popup Container */
        .popup-container {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        /* Popup Form */
        .popup-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 90%;
        }

        .popup-form label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .popup-form input[type="text"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .popup-form button[type="submit"] {
            background-color: #1100ff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .popup-form button[type="submit"]:hover {
            background-color: #0d00cc;
        }
    </style>
</head>

<body>
    <div class="top-bar">
        <h1><i>Tech-Tutor</i></h1>
    </div>
    <h1 align="center">Available Courses</h1>
    <div class="courses-container">
        <!-- Assuming "courses" is an array of course objects -->
        {{#each courses}}
        <div class="course-card">
            <h2>{{name}}</h2>
            <p>Price: {{pricing}}</p>
            <p>Duration: {{duration}}</p>
            <input type="hidden" class="course-id" value="{{_id}}">
          
            <br><br>
            <button class="buy-now-btn">Buy Now</button>
        </div>
        {{/each}}
    </div>

    <!-- Popup Container -->
    <div class="popup-container" id="popup-container" style="display: none;">
        <!-- Popup Form -->
        <div class="popup-form">
            <form id="payment-form" action="/purchase" method="post" enctype="multipart/form-data">
                <label for="amount">Amount to be Paid:</label>
                <input type="text" id="amount" name="amount" readonly>
                <label for="card-details">Card Details:</label>
                <input type="text" id="card-details" name="card-details">
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv">
                <input type="hidden" id="course-id" name="courseId">

                <button type="submit">Pay</button>
            </form>
        </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
    var buyNowButtons = document.querySelectorAll('.buy-now-btn');
    var popupContainer = document.getElementById('popup-container');
    var amountField = document.getElementById('amount');
    var courseIdField = document.getElementById('course-id'); // Change the ID to match the HTML

    buyNowButtons.forEach(function (button) {
        button.addEventListener('click', function () {
            var pricing = this.parentNode.querySelector('p').textContent.split(':')[1].trim();
            var courseId = this.parentNode.querySelector('.course-id').value; // Get the value of the hidden input
            amountField.value = pricing;
            courseIdField.value = courseId; // Set the value of course ID field
            popupContainer.style.display = 'flex'; // Show the popup container
        });
    });

    // Close the popup when clicking outside of it
    popupContainer.addEventListener('click', function (event) {
        if (event.target === popupContainer) {
            popupContainer.style.display = 'none'; // Hide the popup container
        }
    });

    // Event listener for the "Pay" button
    document.getElementById('payment-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission

        // Extract data from the form
        var formData = new FormData(this);
        var purchaseData = {};
        formData.forEach(function(value, key){
            purchaseData[key] = value;
        });

        // Send a POST request to the server to attempt the purchase
        fetch('/purchase', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(purchaseData)
        })
        .then(response => {
            if (response.ok) {
                // If purchase is successful, hide the popup container
                popupContainer.style.display = 'none';
                alert('Purchase successful');
            } else {
                // If an error occurred, check the response status
                if (response.status === 400) {
                    // If the course is already purchased, display the prompt
                    alert('Course already purchased');
                } else {
                    // For other errors, display a generic error message
                    alert('Error processing purchase');
                }
            }
        })
        .catch(error => {
            console.error('Error processing purchase:', error);
            // Display a generic error message if an error occurred
            alert('Error processing purchase');
        });
    });
});



    </script>
</body>

</html>