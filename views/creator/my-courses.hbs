<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Courses</title>
    <style>
        .card {
            border: 3px solid #00ff2a;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .add-content-form {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        .add-content-form h2 {
            margin-top: 0;
        }

        .add-content-form input[type="file"],
        .add-content-form input[type="text"] {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .add-content-form label {
            display: block;
            margin-bottom: 5px;
        }

        .add-content-form button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-content-form button:hover {
            background-color: #0056b3;
        }

        .content img {
            width: 100px;
            height: 100px;
        }

        .content video {
            width: 400px;
            height: auto;
            margin-bottom: 10px;
            margin-left: 500px;
        }

        .close-button {
            position: absolute;
            top: 5px;
            right: 5px;
            cursor: pointer;
        }

        .addbutton {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            border: 1px solid #007bff;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .addbutton:hover {
            background-color: #0056b3;
        }
        .deletebtncource {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff0000;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            border: 1px solid rgb(255, 0, 0);
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .deletebtncource:hover {
            background-color: #ea7575;
        }
        .deletebtncontent {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff0000;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            border: 1px solid rgb(255, 0, 0);
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .deletebtncontent:hover {
            background-color: #ea7575;
        }
    </style>
</head>

<body style="background-color: #000000;">

        <h1 style="text-align: center; color: white; font-size: 39px; font-weight: bold;">MY COURSES</h1>

    </div>    
    {{#each courses}}
    <div class="card">
        <h1 style="color: #ffffff;">COURCE NAME :{{this.name}}</h1>
        <P style="color: #ffffff;">{{this.duration}}</P>

        <form action="/delete-course/{{this._id}}" method="post">
            <button class="deletebtncource" type="submit">Delete Course</button>
        </form>
        {{#each this.contents}}
        <div class="content">
            <!-- Video display -->
            <h2 style="color: #ffffff;"> {{this.title}}</h2>
            <video controls>
                <source src="/videos/{{this._id}}.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <form action="/delete-content/{{../_id}}/{{this._id}}" method="post">
                <button class="deletebtncontent" type="submit">Delete Content</button>
            </form>
            <!-- You can display other information about the content here -->
        </div>
        <br><br>
        {{/each}}
        <br><br>
        <a href="#" style="background-color: #007bff;border-radius: 5px;border: 5px solid rgb(0, 21, 255);color: #ffffff;
            text-decoration: none;transition: background-color 0.3s ease;" class="add-content-button"data-course-id="{{this._id}}">Add Contents</a>
    </div>
    {{/each}}
    <div id="popup-container"></div>

    <script>
        // JavaScript code
        document.addEventListener('DOMContentLoaded', function () {
            const addContentButtons = document.querySelectorAll('.add-content-button');

            addContentButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    const courseId = this.getAttribute('data-course-id');
                    showAddContentForm(courseId);
                });
            });
        });

        function showAddContentForm(courseId) {
            const form = `
                <div class="add-content-form">
                    <span class="close-button" onclick="closeForm()">&times;</span>
                    <h2>Add content</h2>
                    <form action="/add-contents/${courseId}" method="post" enctype="multipart/form-data">
                        <label for="video">Video File:</label>
                        <input type="file" name="video" id="video" accept="video/*" required><br>
                        <label for="title">Title:</label>
                        <input type="text" name="title" id="title" placeholder="Title" required><br>
                        <input type="hidden" name="courseId" value="${courseId}">
                        <button type="submit">Submit</button>
                    </form>
                </div>
            `;
            const popupContainer = document.getElementById('popup-container');
            popupContainer.innerHTML = form;
        }

        function closeForm() {
            const popupContainer = document.getElementById('popup-container');
            popupContainer.innerHTML = '';
        }
    </script>
</body>

</html>